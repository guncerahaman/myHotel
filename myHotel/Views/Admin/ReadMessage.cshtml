@model myHotel.Models.messages

@{
    ViewBag.Title = "ReadMessage";
}

<h2>Read Message</h2>

<div>
  
    <hr />
    <dl class="dl-horizontal">
        @*<dt>
            Date:
        </dt>

        <dd>
           @Model.date
        </dd>*@
        <dt>
            Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Phone:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>

        <dt>
           Message
        </dt>

        <dd>
            @Html.DisplayFor(model => model.message)
        </dd>

    </dl>
</div>
<p>
    <a href="mailto:@Model.email" class="btn btn-primary">Respond</a>
 
    <input class="delete btn btn-primary" type="button" value="Delete" />
    @Html.ActionLink("Confirm to Delete", "DeleteMessage", new { id = Model.Id }, new { @class = "deleteconfirm btn btn-danger" })
    @Html.ActionLink("Back to Messages", "Messages", null, new { @class = "btn btn-primary" })

</p>
