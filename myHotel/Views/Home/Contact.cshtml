@{
    ViewBag.Title = "Contact";
}
    <section class="page-section">
        <h2 class="text-center">@ViewBag.Title</h2>
     
        <div id="contactbox" style="background-color:rgba(255,255,255,0.5)">
            <div id="contactform">
                @if (ViewBag.msg != null)
                {
<p>Message was sent. We will get back to you asap.</p>
                }
                @using (Html.BeginForm())
                {
                    <label class="form-label">Name:</label>
                    <input class="form-control" type="text" name="name" size="30">
                    <label class="form-label">
                        E-mail:
                    </label>
                    <input class="form-control" type="email" name="email" size="30" required>
                    <label class="form-label">
                        Phone:
                    </label>
                    <input class="form-control" type="tel" name="phone" size="30">
                    <label class="form-label">
                        Message:</label>
                      
                        <br />
                        <textarea class="form-control" rows="9" name="message" required>
                     </textarea>

                        <input class="btn btn-light mt-2" type="submit" value="Send" name="submit">
                        }
                </div>
            <div id="social" class="text-center">
                <p class="mt-3">You can send us a message using the contact form</p>
                <h4>Our address :</h4>
                <address>
                    26 Super Road, Perfect City
                    NR1 4AA
                    Awesome Country
                </address>

                <h4>Telephone:</h4>
                <a href="tel:0054448866212">0054448866212</a>
                <h4>Email:</h4>
                <a href="mailto:info@myhotel.guncerahaman.co.uk">myhotel.guncerahaman.co.uk</a>
            </div>
        </div>
   


        <div class="clearfix"></div>


    </section>